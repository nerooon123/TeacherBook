<Page x:Class="TeacherBook.View.Pages.AddStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddStudentPage">

    <Grid>
        <UniformGrid Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя: " Width="200"/>
            <TextBox x:Name="FirstNameTextBox"/>

            <TextBlock Text="Фамилия: " Width="200"/>
            <TextBox x:Name="LastNameTextBox"/>

            <TextBlock Text="Отчество: " Width="200"/>
            <TextBox x:Name="PatronomicTextBox"/>

            <TextBlock Text="Специальность: " Width="200"/>
            <ComboBox x:Name="ProfessionComboBox"/>
            
            <TextBlock Text="Год поступления: " Width="200"/>
            <ComboBox x:Name="YearAddComboBox"/>

            <TextBlock Text="Форма обучения: " Width="200"/>
            <ComboBox x:Name="FormTimeComboBox"/>

            <TextBlock Text="Название группы: " Width="200"/>
            <ComboBox x:Name="NamGroupComboBox"/>

            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </UniformGrid>
    </Grid>
</Page>
