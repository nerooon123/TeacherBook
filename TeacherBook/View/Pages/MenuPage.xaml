<Page x:Class="TeacherBook.View.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua">
            <Button x:Name="AddStudent" Content="Добавить студента"/>
            <Button x:Name="AddEstimation" Content="Добавить оценку"/>
            <Button x:Name="ListStudent" Content="Список студентов"/>
            <Button x:Name="ConstructEstimation" Content="Редактировать оценки"/>
            <Button x:Name="DellStudent" Content="Удалить студента"/>
        </StackPanel>
    </Grid>
</Page>
