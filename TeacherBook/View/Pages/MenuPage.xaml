<Page x:Class="TeacherBook.View.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">
        
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddStudent" Content="Добавить студента" Width="200" Height="40" Margin="1,10,1,10" Background="Yellow" Click="AddStudent_Click"/>
            <Button x:Name="AddEstimation" Content="Добавить оценку" Width="200" Height="40" Margin="1,1,1,10" Background="Yellow"/>
            <Button x:Name="ListStudent" Content="Список студентов" Width="200" Height="40" Margin="1,1,1,10" Background="Yellow" Click="ListStudent_Click"/>
            <Button x:Name="ConstructEstimation" Content="Редактировать оценки" Width="200" Height="40" Margin="1,1,1,10" Background="Yellow"/>
            <Button x:Name="DellStudent" Content="Удалить студента" Width="200" Height="40" Margin="1,1,1,10" Background="Yellow"/>
        </StackPanel>
    </Grid>
</Page>
