<Page x:Class="TeacherBook.View.Pages.AddEstimationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEstimationPage">

    <Grid>
        <UniformGrid Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите группу: " />
            <ComboBox x:Name="GroupNameComboBox" />

            <TextBlock Text="Выберите студента: " />
            <ComboBox x:Name="StudentNameComboBox" />

            <TextBlock Text="Выберите дисциплину: " />
            <ComboBox x:Name="DisciplineComboBox" />

            <TextBlock Text="Оценка: " />
            <TextBox x:Name="Evaluation"/>

            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
        </UniformGrid>
    </Grid>
</Page>
