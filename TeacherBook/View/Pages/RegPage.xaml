<Page x:Class="TeacherBook.View.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border >
            <UniformGrid>
                <TextBlock Text="Логин:" Width="200"/>
                <TextBox x:Name="LoginTextBox"/>
            </UniformGrid>
            </Border>
            <UniformGrid>
      
            <TextBlock Text="Пароль:" Width="200"/>
                <TextBox x:Name="Password"/>
            </UniformGrid>
            
            
            <Button x:Name="RegButton" Content="Зарегистрироваться" Click="RegButton_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
